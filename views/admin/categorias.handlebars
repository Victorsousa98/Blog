<h2>Lista de Categorias</h2>
<hr>
<a href="/admin/categorias/add"><button  class="btn btn-success">Nova Categoria</button></a>


{{#each categorias}}
<div class="card mt-4" >
    <div class="card-body">
        <h4 class="card-title">{{nome}}</h4>
        <p class="card-text">Slusg: {{slug}}</p>
        <small>Data de criação: {{date}} </small>
        <br>
        <a href="/admin/categorias/edit/{{_id}}" class="btn btn-primary mt-3">Edita</a>
        {{!-- <a href="/admin/categorias/delete/{{id}}" class="btn btn-danger mt-3">Deletar</a> --}}
        <form action="/admin/categorias/deletar" method="post">
            <input type="hidden" name="id" value="{{_id}}">
            <button type="submit" class="btn btn-danger mt-3">Deletar</button>
    </div>
</div>
{{/each}}

{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}
    <h4 class="mt-3">Nenhuma categoria registrada</h4>
{{/each}}


